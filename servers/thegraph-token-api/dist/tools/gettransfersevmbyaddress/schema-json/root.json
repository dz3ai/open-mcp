{
  "type": "object",
  "properties": {
    "address": {
      "description": "EVM wallet address to query",
      "type": "string",
      "pattern": "^(0[xX])?[0-9a-fA-F]{40}$",
      "example": "0xd8dA6BF26964aF9D7eEd9e03E53415D37aA96045"
    },
    "network_id": {
      "description": "The Graph Network ID https://thegraph.com/networks",
      "type": "string",
      "enum": [
        "mainnet",
        "bsc",
        "base",
        "arbitrum-one",
        "optimism",
        "matic"
      ],
      "example": "mainnet"
    },
    "age": {
      "description": "Indicates how many days have passed since the data's creation or insertion.",
      "type": "integer",
      "minimum": 1,
      "maximum": 180,
      "default": 30
    },
    "contract": {
      "description": "Filter by contract address",
      "type": "string",
      "pattern": "^(0[xX])?[0-9a-fA-F]{40}$"
    },
    "limit": {
      "description": "The maximum number of items returned in a single request.",
      "type": "integer",
      "minimum": 1,
      "maximum": 1000,
      "default": 10
    },
    "page": {
      "description": "The page number of the results to return.",
      "type": "integer",
      "minimum": 1,
      "default": 1
    }
  },
  "required": [
    "address"
  ]
}